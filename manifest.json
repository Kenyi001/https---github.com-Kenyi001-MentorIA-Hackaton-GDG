{
  "manifest_version": 3,
  "name": "ExtMentor - Analizador de Prompts",
  "description": "Captura y analiza prompts de Gemini Chat para evaluar su calidad",
  "version": "1.0",
  "icons": {
    "16": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://gemini.google.com/*",
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
